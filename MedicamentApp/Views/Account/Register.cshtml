@model MedicamentApp.ViewModels.RegisterViewModel

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Регистрация</title>
    <link rel="stylesheet" href="@Url.Content("~/css/reg.css")">
</head>
<body>
    <h2>Регистрация</h2>
    <form asp-action="Register" method="post" class="register-container">
        <div>
            <label asp-for="Login">Login:</label>
            <input asp-for="Login" />
            <span class="validation-message" asp-validation-for="Login"></span>
        </div>
        <div>
            <label asp-for="Password">Password:</label>
            <input asp-for="Password" type="password" />
            <span class="validation-message" asp-validation-for="Password"></span>
        </div>
        <div>
            <label asp-for="ConfirmPassword">Confirm Password:</label>
            <input asp-for="ConfirmPassword" type="password" />
            <span class="validation-message" asp-validation-for="ConfirmPassword"></span>
        </div>
        <div>
            <label asp-for="RoleCode">Role Code:</label>
            <input asp-for="RoleCode" />
            <span class="validation-message" asp-validation-for="RoleCode"></span>
        </div>
        <div>
            <label asp-for="AccountCode">Account Code:</label>
            <input asp-for="AccountCode" />
            <span class="validation-message" asp-validation-for="AccountCode"></span>
        </div>
        <div>
            <button type="submit">Зарегистрироваться</button>
        </div>
    </form>
    <div class="button-container">
        @* Кнопка "Вернуться на главную страницу" *@
        <form method="get" action="/Home/Index">
            <button type="submit" class="return-button">Вернуться на главную страницу</button>
        </form>
    </div>
</body>
</html>
