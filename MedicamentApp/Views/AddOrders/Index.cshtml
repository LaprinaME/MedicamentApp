@model MedicamentApp.ViewModels.AddOrdersViewModel

<!DOCTYPE html>
<html>
<head>
    <title>Добавить заказ</title>
    <style>
        .btn-primary {
            display: block;
            width: 100%;
            padding: 10px;
            border: none;
            border-radius: 5px;
            background-color: #FFA8C6; /* Неоново-розовый цвет */
            color: #fff;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

            .btn-primary:hover {
                background-color: #FF8C69; /* Пастельно-оранжевый цвет */
            }

        .btn-secondary {
            background-color: #6c757d; /* Серый цвет */
            color: #fff; /* Белый цвет */
            border: none; /* Убираем границу */
            padding: 10px 20px; /* Отступы внутри кнопки */
            border-radius: 5px; /* Скругленные углы */
            text-decoration: none; /* Убираем подчеркивание для ссылки */
            display: inline-block; /* Размещаем кнопку в строку */
            transition: background-color 0.3s ease; /* Плавное изменение цвета при наведении */
            margin-top: 5px;
        }

            .btn-secondary:hover {
                background-color: #495057; /* Цвет кнопки при наведении */
            }
    </style>
</head>
<body>
    <h2>Добавить заказ</h2>
    <form asp-action="AddOrders" method="post">
        <div>
            <label asp-for="Идентификатор"></label>
            <input asp-for="Идентификатор" />
            <span asp-validation-for="Идентификатор"></span>
        </div>
        <div>
            <label asp-for="Код_пользователя"></label>
            <input asp-for="Код_пользователя" />
            <span asp-validation-for="Код_пользователя"></span>
        </div>
        <div>
            <label asp-for="Идентификатор_лекарства"></label>
            <input asp-for="Идентификатор_лекарства" />
            <span asp-validation-for="Идентификатор_лекарства"></span>
        </div>
        <div>
            <label asp-for="Дата_заказа"></label>
            <input asp-for="Дата_заказа" type="date" />
            <span asp-validation-for="Дата_заказа"></span>
        </div>
        <div>
            <label asp-for="Количество"></label>
            <input asp-for="Количество" />
            <span asp-validation-for="Количество"></span>
        </div>
        <button type="submit" class="btn-primary">Добавить</button>
    </form>
    <a href="/Home" class="btn-secondary">Вернуться на главную страницу</a>
</body>
</html>
